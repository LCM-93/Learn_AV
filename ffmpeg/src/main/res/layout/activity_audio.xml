<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AudioActivity">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="decodeAudio"
        android:text="解码音频" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="PCMToAAC"
        android:text="pcm转aac" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="testRecordEncode"
        android:text="testRecordEncode" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="initAudio"
        android:text="初始化录音" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startRecord"
        android:text="开始录音" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="stopRecord"
        android:text="结束录音" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TestCmd"
        android:onClick="testCmd"/>
</LinearLayout>